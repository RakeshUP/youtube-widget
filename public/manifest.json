{
  "manifest_version": 2,
  "name": "YouTube Widget",
  "description": "Widget to control YouTubeâ„¢ media playing in any tab",
  "version": "1.0.1",
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js",
      "js/tabController.js",
      "js/popupController.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "js/contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "index.html",
    "default_title": "Control your YouTube media from here!"
  },
  "permissions": [
    "tabs",
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}